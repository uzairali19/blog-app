<%= content_for :page_title, "Index" %>

<section class="section">
    <div class="container">
        <% @posts.each do |post|%>
            <div class="card">
                <div class="card-header">
                    <div class="card-header-title">
                        <p class="title is-4"><%= link_to post.title, post %></p>
                    </div>
                </div>
                <div class="card-content">
                    <div class="content">
                        <%= post.content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>